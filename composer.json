{
    "repositories":[
        {
            "type":"composer",
            "url":"https://wpackagist.org"
        }
    ],
    "require": {
        "johnpbloch/wordpress": "^5.4",
        "wpackagist-theme/twentytwenty": "*",
        "wpackagist-plugin/easy-appointments": "*",
        "wpackagist-plugin/simply-schedule-appointments": "*",
        "wpackagist-plugin/appointment-hour-booking": "*",
        "wpackagist-plugin/appointment-booking-calendar": "*",
        "wpackagist-plugin/accesspress-social-share": "*"
    },
    "extra": {
        "wordpress-install-dir": "wp",
        "installer-paths": {
            "content/plugins/{$name}": ["type:wordpress-plugin"],
            "content/themes/{$name}": ["type:wordpress-theme"]
        }
    }
}
